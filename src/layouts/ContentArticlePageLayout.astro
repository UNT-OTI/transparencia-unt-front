  <div class="mb-4 sm:block hidden">
    <button id="back-btn" class="text-[#12377B] hover:underline">
      <i class="fa-solid fa-left-long mr-2"></i>Atr√°s
    </button>
  </div>
  <div class="mt-10 flex flex-col space-y-5">
    <slot />
  </div>
