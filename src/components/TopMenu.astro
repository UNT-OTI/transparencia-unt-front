---
import ButtonUNT from "./ButtonUNT.astro";


---
<nav class="bg-white border-gray-200 dark:bg-gray-900">
  <div class="max-w-screen-xl flex items-center justify-between mx-auto p-4">
    <a href="https://unitru.edu.pe/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <img src="/images/logo_completo.png" class="h-20 logo" alt="Flowbite Logo" />
    </a>
    <div class="flex-1 flex justify-center">
      <ul class="flex flex-col md:flex-row items-center md:space-x-8 font-medium bg-gray-50 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900">
        <li>
          <a href="#" class="flex items-center text-gray-900 py-2 px-3 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 md:dark:hover:bg-transparent">
            <img src="/images/svg-icons/research.svg" alt="Ir al portal de transparencia" class="h-8 w-8 mr-2" />
            Portal de Transparencia
          </a>
        </li>
        <li>
          <a href="#" class="flex items-center text-gray-900 py-2 px-3 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 md:dark:hover:bg-transparent">
            <img src="/images/svg-icons/book.svg" alt="Ir al libro de reclamaciones" class="h-8 w-8 mr-2" />
            Libro de Reclamaciones
          </a>
        </li>
        <li>
          <a href="#" class="flex items-center text-gray-900 py-2 px-3 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 md:dark:hover:bg-transparent">
            <img src="/images/svg-icons/mesa-partes.svg" alt="Ir a mesa de partes" class="h-8 w-8 mr-2" />
            Mesa de Partes Virtual
          </a>
        </li>
        <li>
          <a href="#" class="flex items-center text-gray-900 py-2 px-3 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 md:dark:hover:bg-transparent">
            <img src="/images/svg-icons/payments.svg" alt="Ir a pagos en línea" class="h-8 w-8 mr-2" />
            POSTGRADO | Pagos en Línea
          </a>
        </li>
      </ul>
    </div>
    <div class="flex md:order-2">
      <ButtonUNT text="Intranet" />
    </div>
  </div>
</nav>

<style>
  .menu {
    margin: 0;
    padding: 0;
    background-color: #12377B;
  }

  .menu li {
    display: inline-block;
  }

  .menu li a {
    display: block;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
  }

  /* Cambia el color de fondo al pasar el mouse */
  .menu li a:hover {
    background-color: #E6AD09;
  }
</style>