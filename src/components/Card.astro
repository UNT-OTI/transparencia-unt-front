---
interface Props {
    url: string,
    contador: number;
    descripcion: string;
    icon: string;
    display: string;
}

const { url, contador, descripcion, icon, display } = Astro.props;
---
<div class="card-body bg-white border border-gray-200 hover:bg-gray-100 rounded-lg shadow dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 fade-in flex flex-col justify-between">
    <div class="flex flex-col items-center md:flex-row md:max-w-xl flex-grow">
        <div class="flex items-center ml-3">
            <div class="p-7 flex items-center justify-center w-10 h-10 rounded-full border-[#12377B] border-2 ml-2 hover:bg-[#12377B] transition-all">
                <i class={`${icon} text-2xl text-[#12377B] transition-all`}></i>
            </div>
        </div>
        <div class="flex flex-col justify-between p-4 leading-normal">
            <span class="font-bold tracking-tight text-blue-800 mr-2"> { contador == 11 ? "Último párrafo del artículo 11" : "11." + contador } </span><p class="text-justify mt-2">{ descripcion }</p>
        </div>
    </div>
    <div class="w-full text-center p-4">
        <a type="button" href={url || "#"} target={(!url && !display) ? '_self' : display}        
            class="items-center justify-center flex w-full text-[#12377B] hover:text-white border border-[#12377B] hover:bg-[#12377B] focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:focus:ring-blue-800">
            Ver
        </a>
    </div>
</div>

<style>
    .card-body {
        border-left: 4px solid #12377B;
        height: 250px;
        width: 480px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .hover\:bg-\[\#12377B\]:hover i {
        color: white !important;
    }

    .fade-in {
        opacity: 0;
        animation: fadeIn 3.5s forwards;
    }

    @keyframes fadeIn {
        to {
            opacity: 1;
        }
    }
</style>

