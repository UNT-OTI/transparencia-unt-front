---
import BannerImage from "../components/BannerImage.astro";
import Card from "../components/Card.astro";
import TopBanner from "../components/TopBanner.astro";
import TopMenu from "../components/TopMenu.astro";
import Layout from "../layouts/Layout.astro";
import { ley_universitaria } from "../util/info_uni.js";
---

<Layout pageTitle="PÃ¡gina transparencia unt">
	<TopBanner />
	<TopMenu />
	<BannerImage />
	<div class="my-8 mx-28 grid-container">
		{	
			ley_universitaria.map((item, index) => (
				<Card contador = {index + 1}  descripcion = { item.descripcion } icon = { item.icon }/>
