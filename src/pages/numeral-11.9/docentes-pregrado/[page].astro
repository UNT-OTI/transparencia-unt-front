---
import type { GetStaticPaths } from "astro";
import MainLayout from "@layouts/MainLayout.astro";
import ContentArticlePageLayout from "@layouts/ContentArticlePageLayout.astro";
import BannerImage from "@components/BannerImage.astro";
import Footer from "@components/Footer.astro";
import StatementInformationCard from "@components/StatementInformationCard.astro";
import TopBanner from "@components/TopBanner.astro";
import TopMenu from "@components/TopMenu.astro";
import { data_11_9_pregrado } from "@util/data-numeral-11.9/info_11.9";

export const getStaticPaths = (({paginate}) => {
  return paginate(data_11_9_pregrado, { pageSize: 4 })
}) satisfies GetStaticPaths;

const { page } = Astro.props;
---

<MainLayout pageTitle="Numeral 11.9 de la Ley Universitaria | Docentes Pregrado">
    <TopBanner />
	<TopMenu />
    <BannerImage title={"Documentos Públicos Administrativos"} content = {} size={"small"}/>
    <ContentArticlePageLayout>
      {
        data_11_9_pregrado.length > 0 ? 
        <>
          {
            page.data.map(item => (
                <StatementInformationCard
                  statementItem={item}
                />
            ))
          }
          <div class="flex items-center space-x-3 justify-end">
            <p class="text-sm mt-5">
              { page.start + 1 }-{ page.end + 1 } de { page.total } 
            </p>
            <p class="text-sm mt-5">|</p>
            <div class="flex items-center space-x-1.5 mt-5">
              <a href={page.url.prev} class:list={[{
                "cursor-not-allowed": !page.url.prev
              }]}>
                <i class="text-lg fas fa-arrow-circle-left" style={{color: !page.url.prev ? "#BDBDBD" : "#06133d" }}></i>
              </a>
              <p class="text-sm">Página {page.currentPage}</p>
              <a href={page.url.next} class:list={[{
                "cursor-not-allowed": !page.url.next
              }]}>
                <i class="text-lg fas fa-arrow-circle-right" style={{color: !page.url.next ? "#BDBDBD" : "#06133d" }}></i>
              </a>
            </div>
          </div>
        </>
        : (
            <p class="text-center my-10">No hay registros</p>
          )
      }
    </ContentArticlePageLayout>
    <Footer />
</MainLayout>